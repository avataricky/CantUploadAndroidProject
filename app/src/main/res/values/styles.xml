<resources>
    color chooser
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="BrightNightLight" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name = "colorPrimary">#000000</item>
        <item name = "colorPrimaryDark">#000000</item>
        <item name = "android:background">#5b5b5b</item>
        <item name = "colorAccent">@android:color/holo_orange_dark</item>
        <item name = "android:textViewStyle">@android:color/black</item>
        <item name = "android:textColor">#ffffff</item>
        <item name = "android:itemBackground">#000000</item>
        <item name="buttonBarPositiveButtonStyle">@android:color/white</item>
        <item name="buttonBarNegativeButtonStyle">@android:color/white</item>
    </style>
</resources>
